<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Input"/>

    <TextView
        android:id="@+id/tvReportResultsJavaThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvReportResultsAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvReportResultsLooper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnStartJavaThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Java Thread"
        android:onClick="onStartJavaThread"/>

    <Button
        android:id="@+id/btnStartAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartAsyncTask"/>

    <Button
        android:id="@+id/btnStartLooper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartLooper"/>






</LinearLayout>


